extends c
snippet forc "general for loop (for)"
for (${6:auto} ${1:i} = ${2:v.begin()}; `!p snip.rv = t[1].split(" ")[-1]` ${4:!=} ${3:`!p snip.rv = t[2].split(".")[0]`.end()}; ${5:++`!p snip.rv = t[1].split(" ")[-1]`}) {
	${VISUAL}$0
}
endsnippet

snippet whi "while-loop" w
while($1){
	$2
}$3
endsnippet

snippet vec "std::vector (v)"
std::vector<${1:char}> ${0:v};
endsnippet

snippet map "std::map (map)"
std::map<${1:key}, ${2:value}> ${0:map};
endsnippet
